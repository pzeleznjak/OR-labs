                        "type":"float",
                        "format":"IEEE754"
                    },
                    {
                        "name":"subject",
                        "in":"query",
                        "description":"Subject of instructions",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"lesson",
                        "in":"query",
                        "description":"Lesson given on instructions",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"location",
                        "in":"query",
                        "description":"Location of instructions",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"place",
                        "in":"query",
                        "description":"Place of instructions address",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"street",
                        "in":"query",
                        "description":"Street of instructions address",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"house_number",
                        "in":"query",
                        "description":"House number of instructions address",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"zip_code",
                        "in":"query",
                        "description":"Zip code of instructions address",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"country_name",
                        "in":"query",
                        "description":"Country name of instructions address",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"parent_first_name",
                        "in":"query",
                        "description":"First name of parent",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"parent_last_name",
                        "in":"query",
                        "description":"Last name of parent",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"telephone",
                        "in":"query",
                        "description":"Telephone number of parent",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"email",
                        "in":"query",
                        "description":"Email address of parent",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"area_code",
                        "in":"query",
                        "description":"Area code of telephone number of parent",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"school",
                        "in":"query",
                        "description":"Name of school child attends",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"class",
                        "in":"query",
                        "description":"Class child attends",
                        "required":true,
                        "type":"integer",
                        "format":"Int64"
                    },
                    {
                        "name":"child_first_name",
                        "in":"query",
                        "description":"First name of child",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    },
                    {
                        "name":"child_last_name",
                        "in":"query",
                        "description":"Last name of child",
                        "required":true,
                        "type":"string",
                        "format":"utf-8"
                    }
                ],
                "responses":{
                    "400":{
                        "description":"Invalid data in request body"
                    },
                    "500":{
                        "description":"Error in processing request"
                    },
                    "200": {
                        "description":"Instructions successfully added"
                    }
                }
            }
        },
